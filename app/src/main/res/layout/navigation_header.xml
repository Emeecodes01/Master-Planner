<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/nav_header_background"
    xmlns:tools="http://schemas.android.com/tools">

    <com.example.circularimageview.CircularImageView
        android:id="@+id/user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        app:imageSrc="@drawable/tuface"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Emmanuel Ozibo" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/num_of_remainder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_name"
        android:layout_alignBottom="@+id/user_name"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/user_name"
        android:layout_toStartOf="@+id/user_name"
        android:text="20 Reminders" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/calander_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_name"
        android:layout_alignBottom="@+id/user_name"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/user_name"
        android:layout_toRightOf="@+id/user_name"
        android:text="4 Events"/>

</RelativeLayout>